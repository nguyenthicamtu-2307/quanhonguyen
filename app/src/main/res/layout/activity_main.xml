<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffbd59">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_lsdq"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffa87a"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton

            android:id="@+id/imgbt_qlai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#ffa87a"
            android:scaleType="fitStart"
            android:src="@drawable/quaylai"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Lịch sử đổi quà"
            android:textColor="#793825"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/toolbar_lsdq">

        <ImageView
            android:id="@+id/khungvien1"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:layout_marginTop="20dp"
            android:src="@drawable/khungchunhat" />

        <TextView
            android:id="@+id/textview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="33dp"
            android:padding="10dp"
            android:text="Số điểm của bạn là"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_vongtron"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginLeft="270dp"
            android:layout_marginTop="17dp"

            android:src="@drawable/hinhtron" />

        <TextView
            android:id="@+id/textview_diem"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignStart="@+id/image_vongtron"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:padding="10dp"

            android:text="0"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"

        android:text="50 Điểm"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/relativelayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_2"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/khungvien_sp1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/khungvien" />



        <ImageView

            android:id="@+id/image_khungsanpham1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="14.5dp"
            android:src="@drawable/hinhvuong"

            />

        <ImageView
            android:id="@+id/image_sanpham"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/anh1" />

        <TextView
            android:id="@+id/textview_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Tên sản phẩm"
            android:textColor="#525151"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textview_giasp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_sanpham"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:text="20,000đ"
            android:textColor="#bc1823"
            android:textSize="20sp"
            tools:ignore="DuplicateIds" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_sanpham"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#fdf3bb"
            android:gravity="bottom|right"
            android:text="Đổi"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/khungvien_sp2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/khungvien" />



        <ImageView

            android:id="@+id/image_khungsanpham2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="14.5dp"
            android:src="@drawable/hinhvuong"

            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/image_sanpham2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/anh2" />

        <TextView
            android:id="@+id/textview_sanpham2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Tên sản phẩm"
            android:textColor="#525151"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_giasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_sanpham2"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:text="20,000đ"
            android:textColor="#bc1823"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_sanpham2"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#fdf3bb"
            android:gravity="bottom|right"
            android:text="Đổi"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="NotSibling" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"

        android:text="100 Điểm"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/relativelayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_3"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/khungvien_sp3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/khungvien" />



        <ImageView

            android:id="@+id/image_khungsanpham3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="14.5dp"
            android:src="@drawable/hinhvuong"

            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/image_sanpham3"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/anh3" />

        <TextView
            android:id="@+id/textview_sanpham3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Tên sản phẩm"
            android:textColor="#525151"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_giasp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_sanpham3"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:text="20,000đ"
            android:textColor="#bc1823"
            android:textSize="20sp"
            tools:ignore="NotSibling" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_sanpham3"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#fdf3bb"
            android:gravity="bottom|right"
            android:text="Đổi"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="NotSibling" />

    </RelativeLayout>
    <TableLayout
        android:id="@+id/table_layout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/relativelayout_3"
        android:layout_marginTop="15dp"
        android:background="#ffa87a">


    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButon1"
            android:layout_width="102dp"
            android:layout_height="67dp"
            android:background="#ffa87a"
            android:src="@drawable/home"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="102dp"
            android:layout_height="67dp"
            android:background="#ffa87a"
            app:srcCompat="@drawable/donhang"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="102dp"
            android:layout_height="67dp"
            android:background="#ffa87a"
            app:srcCompat="@drawable/tichdiem"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="102dp"
            android:layout_height="67dp"
            android:background="#ffa87a"
            app:srcCompat="@drawable/person"
            tools:ignore="SpeakableTextPresentCheck" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView4"
            android:text="Trang chủ"
            android:textColor="#a44f30"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView3"
            android:text="Đơn hàng"
            android:textColor="#a44f30"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView2"
            android:text="Tích điểm"
            android:textColor="#a44f30"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textview_5"
            android:text="Cá nhân"
            android:textColor="#a44f30"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </TableRow>
    </TableLayout>



</RelativeLayout>