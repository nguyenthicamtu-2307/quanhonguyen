<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/vang"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewper"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menubar"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pink"
        app:itemIconTint="@color/color_bar"
        app:itemTextColor="@color/color_bar"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bar" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/sline_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="70dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/cirle_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="300dp"
                app:ci_drawable="@drawable/mutiline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="645dp"
                android:orientation="vertical"
                android:padding="30dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="311dp"
                    android:layout_height="50dp"

                    android:background="@color/white"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search here">

                </androidx.appcompat.widget.SearchView>

                <ListView
                    android:id="@+id/mylist"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white">

                </ListView>

            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>