<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <com.example.foodorder.custom.blackjacktextview
        android:id="@+id/textView2"
        android:layout_width="199dp"
        android:layout_height="351dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:text="Quán Họ Nguyễn "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="374dp"
        android:layout_height="83dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="193dp"
        android:text="Get Special Prices For Ordering Through Our App"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="67dp"
        android:layout_height="69dp"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-530dp"
        app:srcCompat="@drawable/ic_arrow_down" />

    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView"
                    app:srcCompat="@drawable/fb_icon" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    app:srcCompat="@drawable/zalo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ins_icon" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/sdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 123 - 456 - 7890"
                        android:textColor="#0B0909"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="qhnguyen@gmail.com"
                        android:textColor="#0B0909"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pink"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="8dp"
                        android:text="next"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="267dp"
        android:layout_height="266dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="-84dp"
        android:rotation="-29"
        app:srcCompat="@drawable/copy_822038102" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="267dp"
        android:layout_height="259dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="-90dp"
        android:layout_toEndOf="@+id/textView2"
        android:rotation="12"
        app:srcCompat="@drawable/copy_857807268" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="303dp"
        android:layout_height="261dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-44dp"
        app:srcCompat="@drawable/copy_28094653" />


</RelativeLayout>