<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffa87a"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"

            android:src="@drawable/lg" />

        <ImageView
            android:layout_width="253dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"

            android:src="@drawable/td" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/foodter15"
        android:layout_below="@id/header15"
        android:background="#ffbd59"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/uD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Ưu Đãi Tích Điểm"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/MKHH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uD">

                <TextView
                    android:id="@+id/MKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="MaKH: "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/MKH"
                    android:text="S01 "
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/KHH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MKHH">

                <TextView
                    android:id="@+id/KH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Khách hàng : "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/KH"
                    android:text="Nguyễn Xuân Đức "
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tichdiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/KHH">

                <TextView
                    android:id="@+id/tdiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Số điểm tích lũy:  "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tdiem"
                    android:text="50 "
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/phieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tichdiem"
                android:layout_marginTop="10dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="2">

                    <TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/BtnDQ"
                                android:layout_width="39dp"
                                android:layout_height="33dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/per15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="Lịch sử đổi quà"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/PUDhinh15"
                                android:layout_width="39dp"
                                android:layout_height="33dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/anh15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="Phiếu Ưu đãi của bạn"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="144dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnLSGD"
                                android:layout_width="39dp"
                                android:layout_height="33dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/per15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="Lịch sử giao dịch"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </TableRow>

                </TableLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/textPUD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phieu"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Phiếu ưu đãi"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/foodter15"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/textPUD"
                android:layout_marginTop="20dp"
                android:background="#f6e0bf">


                <ImageView
                    android:id="@+id/sale2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/sale" />

                <TextView
                    android:id="@+id/textview_pud2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:text="Giảm 10% cho đơn"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_ud2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_pud2"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="HSD:30/04/2021"
                    android:textColor="#793825"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/button_ud2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_ud2"
                    android:layout_marginLeft="250dp"
                    android:backgroundTint="#f6e0bf"
                    android:minHeight="48dp"
                    android:text="Dùng ngay"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>