<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffbd59">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffa87a"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton

            android:id="@+id/imgbt_qlai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#ffa87a"
            android:scaleType="fitStart"
            android:src="@drawable/quaylai"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Thông tin cá nhân"
            android:textColor="#793825"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/image_khung"
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:layout_below="@id/toolbar_cn"
        android:src="@drawable/khungavata" />

    <ImageView
        android:id="@+id/image_avarta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/toolbar_cn"

        android:layout_marginLeft="150dp"
        android:layout_marginTop="53dp"

        android:background="@color/black"
        android:src="@drawable/admin" />

    <ImageButton
        android:id="@+id/imagebt_setting"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/toolbar_cn"
        android:layout_marginLeft="300dp"
        android:background="fdf4c0"
        android:src="@drawable/setting"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rltlo1"
        android:layout_below="@id/image_avarta"
        android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/image_khungten1"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:src="@drawable/khung_ten"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Tên"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textview_ten1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:text="Nguyễn Văn A"
            android:textSize="25sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rltlo2"
        android:layout_below="@id/rltlo1"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_khungten2"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:src="@drawable/khung_ten" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Tên đăng nhập"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textview_ten2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:text="abc123"
            android:textSize="25sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rltlo3"
        android:layout_below="@id/rltlo2"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_khungten3"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:src="@drawable/khung_ten" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Giới tính"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textview_ten4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:text="Nam"
            android:textSize="25sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rltlo4"
        android:layout_below="@id/rltlo3"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_khungten4"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:src="@drawable/khung_ten" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Ngày sinh"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textview_ten3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:text="1/1/2001"
            android:textSize="25sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rltl5"
        android:layout_below="@id/rltlo4"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_khungten5"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:src="@drawable/khung_ten" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Số điện thoại"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textview_ten5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:text="0123456789"
            android:textSize="25sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rltlo6"
        android:layout_below="@id/rltl5"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_khungten6"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:src="@drawable/khung_ten" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Địa chỉ"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textview_ten6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="25sp" />
    </RelativeLayout>




</RelativeLayout>