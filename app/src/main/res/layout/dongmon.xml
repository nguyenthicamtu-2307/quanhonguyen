<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/botron_sp">

        <RelativeLayout
            android:id="@+id/hinhanh"
            android:layout_width="70dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/hinhud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ts" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/hinhanh"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tenmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/faustinasemibold"
                android:gravity="left"
                android:text="Trà sữa khoai môn"
                android:layout_marginBottom="5dp"
                android:textColor="@color/maumon"
                android:textSize="23dp"
                android:textStyle="bold" />



                <TextView
                    android:id="@+id/gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:text="25,000đ"
                    android:textColor="@color/tien"
                    android:textSize="24dp" />






        </LinearLayout>

        <Button
            android:id="@+id/themsp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"

            android:background="@drawable/ic_baseline_add_circle_24" />

    </RelativeLayout>
</LinearLayout>