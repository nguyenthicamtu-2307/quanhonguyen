                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="70dp"
                            android:text="50,000vnđ"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </FrameLayout>
