            android:layout_height="wrap_content"
            app:srcCompat="@drawable/unnamed" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="87dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/coffe" />

        <TextView
            android:id="@+id/coffe"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:text="Coffe"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ts"
            android:layout_width="81dp"
            android:layout_height="59dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-90dp"
            app:srcCompat="@drawable/ts" />

        <TextView
            android:id="@+id/editts"
            android:layout_width="81dp"

            android:layout_height="32dp"
            android:layout_marginLeft="100dp"
            android:text="Trà Sữa"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/banhmi"
            android:layout_width="79dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-90dp"
            app:srcCompat="@drawable/bm" />

        <TextView
            android:id="@+id/editbm"
            android:layout_width="81dp"
            android:layout_height="37dp"
            android:layout_marginLeft="210dp"
            android:text="Bánh Mì"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bsn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="-100dp"
            app:srcCompat="@drawable/bsn" />

        <TextView
            android:id="@+id/editbsn"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="320dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Bánh sinh Nhật" />

    </LinearLayout>

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Top Bán Chạy Nhất"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_marginTop="480dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="500dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="119dp"
            android:layout_height="113dp"

            android:layout_marginTop="-25dp"
            android:background="@color/node">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="77dp"
                android:layout_height="61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="33dp"
                app:srcCompat="@drawable/cake" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:text="50,000vnđ"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="57dp"
            android:layout_height="49dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-90dp"
            app:srcCompat="@drawable/sale" />

        <FrameLayout
            android:layout_width="102dp"
            android:layout_height="96dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-50dp"
            android:background="@color/node">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="76dp"
                android:layout_height="63dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/mousse" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:text="25,000vnd"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="109dp"
            android:layout_height="100dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="-100dp"
            android:background="@color/node">

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="78dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/tras" />

            <TextView
                android:id="@+id/textView14"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35,000vnd"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="610dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt Gần Đây" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="640dp"
        android:background="@color/black" />


</RelativeLayout>