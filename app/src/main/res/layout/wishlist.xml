<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".activity.MainActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nen"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/marker_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/faustinasemibold"
                    android:gravity="center"
                    android:text="48 Cao Thắng - Hải Châu -Đà Nẵng"
                    android:textColor="@color/mauchu"
                    android:textSize="23dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtSearch"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius"
                    android:fontFamily="@font/faustinasemibold"
                    android:padding="10dp"
                    android:textColor="@color/maumon"
                    android:textColorHint="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnSearch"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_search_24"
                    android:textColor="@color/mauchu"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/search1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="@drawable/retangle_boder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/anh1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/banhpanta" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/faustinasemibold"
                            android:gravity="center"
                            android:text="Bánh Panna"
                            android:textColor="@color/afternau"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/anh2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/ts4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/faustinasemibold"
                            android:gravity="center"
                            android:text="Trà Creme"
                            android:textColor="@color/afternau"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/anh3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/banh2" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anh1"
                            android:fontFamily="@font/faustinasemibold"
                            android:gravity="center"
                            android:text="Bánh Mosse"
                            android:textColor="@color/afternau"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:id="@+id/dexuat"
                            android:fontFamily="@font/faustinasemibold"
                            android:gravity="left"
                            android:text="Đề xuất"
                            android:textAllCaps="false"
                            android:textColor="@color/mauchu"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dex"
                            android:layout_column="2"
                            android:fontFamily="@font/faustinasemibold"
                            android:gravity="center"
                            android:text="Xem tất cả"
                            android:textAllCaps="false"
                            android:textColor="@color/mauchu"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/retangle_menu"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/banhpanta" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bánh Panna" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45,000 đ"
                                android:textColor="@color/tien" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/banhpanta" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bánh Panna" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45,000 đ"
                                android:textColor="@color/tien" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/banhpanta" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bánh Panna" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45,000 đ"
                                android:textColor="@color/tien" />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/faustinasemibold"
                        android:text="Trà sữa"
                        android:textColor="@color/mauchu"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>
