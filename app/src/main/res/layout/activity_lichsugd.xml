<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffbd59">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_lsdq"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffa87a"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton

            android:id="@+id/imgbt_qlai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#ffa87a"
            android:scaleType="fitStart"
            android:src="@drawable/quaylai"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Lịch sử giao dịch"
            android:textColor="#793825"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/toolbar_lsdq"
        android:id="@+id/relativelayout_gd1"
        android:layout_marginTop="25sp"
        >

        <ImageView
            android:id="@+id/khung_gd1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/khungchunhat" />

        <ImageView
            android:id="@+id/tachtra1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@drawable/tachtra" />

        <TextView
            android:id="@+id/textview_doi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:text="Đổi thành công "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_ngaydoi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_doi1"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="30/04/2021"
            android:textColor="#793825"
            android:textSize="22dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_ngaydoi1"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#f6e0bf"
            android:textStyle="bold"
            android:text="Chi tiết"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/relativelayout_gd1"
        android:id="@+id/relativelayout_gd2"
        android:layout_marginTop="10dp"

        >

        <ImageView
            android:id="@+id/khung_gd2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/khungchunhat"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/tachtra2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@drawable/tachtra" />

        <TextView
            android:id="@+id/textview_doi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:text="Đổi thành công "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_ngaydoi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_doi2"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="30/04/2021"
            android:textColor="#793825"
            android:textSize="22dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_ngaydoi2"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#f6e0bf"
            android:textStyle="bold"
            android:text="Chi tiết"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/relativelayout_gd2"
        android:id="@+id/relativelayout_gd3"
        android:layout_marginTop="10dp"
       >

        <ImageView
            android:id="@+id/khung_gd3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/khungchunhat" />

        <ImageView
            android:id="@+id/tachtra3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@drawable/tachtra" />

        <TextView
            android:id="@+id/textview_doi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:text="Đổi thành công "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_ngaydoi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_doi3"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="30/04/2021"
            android:textColor="#793825"
            android:textSize="22dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_ngaydoi3"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#f6e0bf"
            android:textStyle="bold"
            android:text="Chi tiết"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/table_layout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/relativelayout_gd3"
        android:layout_marginTop="20dp"
        android:background="#ffa87a">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButon1"
                android:layout_width="102dp"
                android:layout_height="67dp"
                android:background="#ffa87a"
                android:src="@drawable/home"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="102dp"
                android:layout_height="67dp"
                android:background="#ffa87a"
                app:srcCompat="@drawable/donhang"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="102dp"
                android:layout_height="67dp"
                android:background="#ffa87a"
                app:srcCompat="@drawable/tichdiem"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="102dp"
                android:layout_height="67dp"
                android:background="#ffa87a"
                app:srcCompat="@drawable/person"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView4"
                android:text="Trang chủ"
                android:textColor="#a44f30"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView3"
                android:text="Đơn hàng"
                android:textColor="#a44f30"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView2"
                android:text="Tích điểm"
                android:textColor="#a44f30"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textview_1"
                android:text="Cá nhân"
                android:textColor="#a44f30"
                android:textSize="20sp"
                android:textAlignment="center"/>

        </TableRow>

    </TableLayout>


</RelativeLayout>