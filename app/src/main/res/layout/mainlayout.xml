<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tenquan"
        android:layout_width="288dp"
        android:layout_height="333dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:fontFamily="@font/font"
        android:gravity="center_horizontal"
        android:text="Quán Họ Nguyễn "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/capstion"
        android:layout_width="374dp"
        android:layout_height="83dp"
        android:layout_below="@+id/tenquan"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="193dp"
        android:text="Get Special Prices For Ordering Through Our App"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="67dp"
        android:layout_height="69dp"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-530dp"
        app:srcCompat="@drawable/ic_arrow_down"
        tools:ignore="VectorDrawableCompat" />

    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/socal"
                android:layout_width="200dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/capstion"
                    app:srcCompat="@drawable/fb_icon" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    app:srcCompat="@drawable/zalo_icon" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ins_icon" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/sdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 123 - 456 - 7890"
                        android:textColor="#0B0909"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="qhnguyen@gmail.com"
                        android:textColor="#0B0909"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="267dp"
        android:layout_height="266dp"
        android:layout_below="@+id/tenquan"
        android:layout_marginTop="-84dp"
        android:rotation="-29"
        app:srcCompat="@drawable/copy_822038102" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="267dp"
        android:layout_height="259dp"
        android:layout_below="@+id/tenquan"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="-90dp"
        android:layout_toEndOf="@+id/tenquan"
        android:rotation="12"
        app:srcCompat="@drawable/copy_857807268"
        android:layout_marginLeft="-270dp"
        android:layout_toRightOf="@+id/tenquan" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="303dp"
        android:layout_height="261dp"
        android:layout_below="@+id/tenquan"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-44dp"
        app:srcCompat="@drawable/copy_28094653" />


</RelativeLayout>